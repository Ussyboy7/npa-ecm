# Django
DJANGO_SECRET_KEY=local-secret-change-me
DJANGO_DEBUG=True
DJANGO_ENV=local
ALLOWED_HOSTS=localhost,127.0.0.1
CSRF_TRUSTED_ORIGINS=http://localhost:8000,http://127.0.0.1:8000

# Database (PostgreSQL for local development - using staging database with existing data)
DB_ENGINE=postgres
DB_NAME=npa_ecm_stag
DB_USER=ecmadmin
DB_PASSWORD=ecmadmin
DB_HOST=localhost
DB_PORT=5432

# Redis / Celery
REDIS_HOST=redis
REDIS_PORT=6379
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/1

# JWT
JWT_ACCESS_MINUTES=60
JWT_REFRESH_DAYS=7

# Frontend integration
CORS_ALLOWED_ORIGINS=http://localhost:3002,http://127.0.0.1:3002
MAX_UPLOAD_SIZE_MB=10
CLAMAV_SCAN_ENABLED=false
CLAMAV_BINARY_PATH=clamscan
